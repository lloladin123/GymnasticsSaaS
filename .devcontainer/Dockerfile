FROM node:18-alpine

# Add git and other useful tools
RUN apk add --no-cache git

# Set working directory
WORKDIR /app

# Copy dependency definitions
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm install

# Copy all files
COPY . .

# Build Next.js app
RUN npm run build

# Expose the port
EXPOSE 3000

# Start app
CMD ["npm", "start"]
